    <!--scroll top 시작-->
    <div>
        <button id="btnTop" class="btn_top" type="button">
          <img class="arrow_up" src="/static/img/arrow.png" alt="arrow_up">
        </button>
      </div>
      <script>
        $(window).scroll(function () {
        if ($(this).scrollTop() > 300) {
          $('#btnTop').show();
        } else {
          $('#btnTop').hide();
        }
      });
      $('#btnTop').on('click', e => {
        window.scrollTo({ top: 0, left: 0, behavior: 'smooth' });
      });
      </script>
